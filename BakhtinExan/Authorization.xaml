<Page x:Class="BakhtinExan.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ParilowExsamen"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="AliceBlue">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center"  Margin="0,0,0,15" FontWeight="Bold" FontSize="16"/>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="tBoxLogin"/>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="tBoxPass"/>
            <Button Content="Вход" x:Name="btnAuth" Margin="0,10,0,0"/>
            <Button Content="Закрыть" x:Name="btnExit"/>
        </StackPanel>
    </Grid>
</Page>
